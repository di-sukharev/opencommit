{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["es6", "es2020"],

    "module": "CommonJS",
    // "rootDir": "./src",
    "resolveJsonModule": true,
    "moduleResolution": "node",

    "allowJs": true,

    "outDir": "./out",

    "esModuleInterop": true,
    
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "skipLibCheck": true,
    "noImplicitAny": false,
  },
  "exclude": ["node_modules"],
}
